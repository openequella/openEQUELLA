{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "ES6",
    "lib": ["ES6"],
    "target": "ES6",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "jsx": "react",
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ]
  }
}
