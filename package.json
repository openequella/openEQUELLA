{
  "name": "openequella",
  "private": true,
  "scripts": {
    "postinstall": "cross-env-shell \"./coursier bootstrap com.geirsson:scalafmt-cli_2.12:1.5.1 -f -o node_modules/.bin/scalafmt && ./coursier bootstrap com.google.googlejavaformat:google-java-format:1.7 -f -o node_modules/.bin/google-java-format\"",
    "format:scala": "find . -name \"*.scala\" -o -name \"*.sbt\" | xargs scalafmt",
    "format:java": "find . -name \"*.java\" | xargs google-java-format -r",
    "format:ts": "prettier --write \"Source/Plugins/Core/**/*.{ts,tsx}\"",
    "check:scala": "find . -name '*.scala' -o -name '*.sbt' | xargs scalafmt --test",
    "check:java": "find . -name '*.java' | xargs google-java-format -n --set-exit-if-changed",
    "check:md": "remark -q -f -u remark-validate-links -u remark-lint-no-dead-urls .",
    "check:ts": "prettier -c \"Source/Plugins/Core/**/*.{ts,tsx}\"",
    "check:tsx": "cd Source/Plugins/Core/com.equella.core/js && eslint src tsrc --ext js,ts,tsx && cd ../../../../..",
    "check": "run-s check:*",
    "format": "run-s format:*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "babel-eslint": "10.1.0",
    "cross-env": "5.2.1",
    "eslint": "6.8.0",
    "eslint-config-react-app": "5.2.0",
    "eslint-plugin-flowtype": "4.6.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "2.5.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "remark-cli": "7.0.1",
    "remark-lint-no-dead-urls": "1.0.2",
    "remark-validate-links": "10.0.0",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write",
    "*.java": "google-java-format --replace",
    "*.{scala,sbt}": "scalafmt"
  },
  "eslintConfig": {
    "root": true,
    "extends": "react-app",
    "env": {
      "jquery": true
    }
  }
}
