<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.admin.controls.flickr" version="1">
	<attributes>
		<attribute id="type" value="admin-console" />
	</attributes>

	<requires>
		<import plugin-id="com.tle.admin.controls" />
		<import plugin-id="com.tle.admin.controls.universal" />

		<import plugin-id="com.tle.common.i18n" />
	</requires>

	<runtime>
		<library type="code" path="classes/" id="core">
			<export prefix="*" />
		</library>
		<library type="resources" path="resources/" id="resources" />
	</runtime>

	<extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
		<parameter id="group" value="admin-console" />
		<parameter id="file" value="lang/i18n.properties" />
	</extension>

	<extension plugin-id="com.tle.admin.controls.universal" point-id="editor" id="flickrHandler">
		<parameter id="nameKey" value="com.tle.admin.controls.flickr.settings.title" />
		<parameter id="configPanel" value="com.tle.admin.controls.flickr.universal.FlickrSettingsPanel" />
	</extension>
</plugin>
